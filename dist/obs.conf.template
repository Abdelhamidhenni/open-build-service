$SERVER["socket"] == "[::]:443" {

  ssl.engine  = "enable"
  ssl.pemfile = "/etc/apache2/ssl.yourdomain/yourdomain-rsa-www.pem"

  $HTTP["host"] =~ "build.yourdomain.ext\.?" {
    rails_app   = "webui"
    rails_root  = "/srv/www/obs/webui"
    rails_procs = 6
    # production/development are typical values here
    # rails_mode  = "production_slave"
    rails_mode  = "development"

    log_root = "/srv/www/obs/webui/log"

    include "vhosts.d/rails.inc"
  }

  $HTTP["host"] =~ "api.yourdomain.ext\.?" {
    rails_app   = "api"
    rails_root  = "/srv/www/obs/api"
    rails_procs = 6
    # production/development are typical values here
    # rails_mode  = "production_slave"
    rails_mode  = "development"

    log_root = "/srv/www/obs/api/log"

    include "vhosts.d/rails.inc"
  }

}

$HTTP["host"] =~ "download.yourdomain.ext\.?" {
  server.name = "download.yourdomain.ext"

  server.document-root = "/srv/obs/repos/"
  dir-listing.activate = "enable"
}
