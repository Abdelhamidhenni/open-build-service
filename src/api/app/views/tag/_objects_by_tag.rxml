xml.instruct!

xml.collection(:tag => @tag.name) do

  if @projects
    @projects.each do |project|
      xml.project(:name => project.name)
    end
  end
  
  if @packages 
    @packages.each do |package|
      xml.package(:project => package.db_project.name, :name => package.name)
    end
  end

end