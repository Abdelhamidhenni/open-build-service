if @type == "package"
    xml.instruct!
    xml.tags(@type => @package.name, :project => @project.name, :title => @package.title, :user => params[:user]) do
    @tags.each do |tag|
    xml.tag(:name => tag.name)
 end
 end
else
    xml.instruct!
    xml.tags(@type => @project.name, :title => @project.title, :user => params[:user]) do
    @tags.each do |tag|
      xml.tag(:name => tag.name)
    end
    end
 end        
