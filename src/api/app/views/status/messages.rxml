
xml.instruct!

xml.status_messages( :count => @count ) do
  @messages.each do |msg|
    # case msg with deleted user
    userlogin = "--"
    if msg.user and msg.user.login
      userlogin = msg.user.login
    end
    xml.message(
      msg.message,
      :msg_id => msg.id,
      :user => userlogin
      :severity => msg.severity,
      :created_at => msg.created_at,
      :deleted_at => msg.deleted_at
    )
  end
end

