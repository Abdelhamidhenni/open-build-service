<% @pagetitle = "Requests for #{h(user)}" %>
<% @pagetitle = 'My Requests' if user.to_s == session[:login] %>
<% @crumb_list = [@pagetitle] %>

<h3><%= @pagetitle %></h3>

<% if user.to_s != session[:login] %>
  <ul>
    <li><%= link_to('User profile', :controller => 'home', :user => user.to_s) %></li>
    <li><%= link_to('Home project', :controller => 'project', :action => 'show', :project => 'home:' + user.to_s) %></li>
  </ul>
<% end %>

<%= render(:partial => 'shared/select_requests', :locals => {:requests => @requests}) %>
