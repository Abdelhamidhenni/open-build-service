<% content_for :content_for_head do %>
  <%= javascript_include_tag 'jquery.tablesorter.js' %>
<% end %>

<% content_for :head_javascript do %>
  function change_role() {
    str = $(this).attr('id');

    // The user/group name as found in the element id can contain underscores, therefore we have
    // to split off substrings, because the JavaScript split() function is useless. Motivation:
    // "A_B_C_D".split('_', 2); returns ['A','B'], and not ['A','B','C_D'] as sane languages do.
    type = str.slice(0, str.indexOf('_')); str = str.slice(str.indexOf('_') + 1);
    role = str.slice(0, str.indexOf('_')); str = str.slice(str.indexOf('_') + 1);

    if (type == 'user') {
      if ($(this).attr('checked')) {
        url = '<%= url_for(:action => "save_person", :project => @project, :package => @package) %>';
      } else {
        url = '<%= url_for(:action => "remove_person", :project => @project, :package => @package) %>';
      }
    } else if (type == 'group') {
      if ($(this).attr('checked')) {
        url = '<%= url_for(:action => "save_group", :project => @project, :package => @package) %>';
      } else {
        url = '<%= url_for(:action => "remove_group", :project => @project, :package => @package) %>';
      }
    }

    $('#' + type + '_spinner').show();
    $('#' + type + '_table').animate({opacity: 0.2}, 500);
    $('#' + type + '_table input').disable();

    url += ';' + type + 'id=' + str + ';role=' + role;
    $.ajax({
      url: url,
      type: 'POST',
      complete: function() {
        $('#' + type + '_spinner').hide();
        $('#' + type + '_table').animate({opacity: 1}, 200);
        $('#' + type + '_table input').enable();
      }
    });
  }
<% end -%>

<div id="involved_users">
  <h3><%= @pagetitle %> <%= image_tag 'ajax-loader.gif', :id => 'user_spinner', :class => 'hidden' %></h3>

  <% if @users and @users.length > 0 %>
    <table cellspacing='1' id="user_table" class="tablesorter">
      <thead>
        <tr>
          <th>User</th>
          <th colspan="<%= @roles.length %>">Roles</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= render :partial => 'shared/user_with_realname_and_gravatar', :locals => {:user => user}%></td>
            <% @roles.each do |role| %>
              <td>
                <% if @user and @user.is_maintainer?(@project, @package) %>
                  <% if defined? @package %>
                    <%= check_box_tag("user_" + role + "_" + user, '', @package.user_has_role?(user, role) || @project.user_has_role?(user, role), :class => "trigger") %><%= role.capitalize %>
                  <% else %>
                    <%= check_box_tag("user_" + role + "_" + user, '', @project.user_has_role?(user, role), :class => "trigger") %><%= role.capitalize %>
                  <% end %>
                  <script type="text/javascript">$('#user_<%= role %>_<%= user %>').change(change_role);</script>
                <% else %>
                  <%= role.capitalize %>
                <% end %>
              </td>
            <% end %>
            <td>
              <% mail_to = 'mailto:' + Person.email_for_login(user) + '?subject=openSUSE%20Build%20Service%20-%20' + @project.name %>
              <% mail_to += '/' + @package.name if defined? @package %>
              <%= link_to(image_tag('icons/email.png', :alt => "Send mail", :title => "Send mail to user"), mail_to) %>
              <% if @user and @user.is_maintainer?(@project, @package) %>
                <%= link_to image_tag('icons/user_delete.png', :alt => "Remove", :title => "Remove user"), {:action => "remove_person", :project => @project, :package => @package, :userid => user}, {:confirm => "Really remove '#{user}'?", :method => :post}%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <script type="text/javascript">
      $('#users_table').tablesorter({ widgets: ['zebra'], sortList: [[0,1]], headers: {1: {sorter: false}, 2: {sorter: false}} });
    </script>
  <% end %>
  <% if @user and @user.is_maintainer?(@project, @package) %>
    <p>
      <%= link_to image_tag('icons/user_add.png', :alt => "Add user", :title => "Add user"), :action => :add_person, :package => @package, :project => @project %>
      <%= link_to 'Add user', :action => :add_person, :package => @package, :project => @project %>
    </p>
  <% end %>

  <% if @groups and @groups.length > 0 %>
    <h3>Groups <%= image_tag 'ajax-loader.gif', :id => 'group_spinner', :class => 'hidden' %></h3>
    <table cellspacing='1' id="group_table" class="tablesorter">
      <thead>
        <tr>
          <th>Group</th>
          <th colspan="<%= @roles.length %>">Roles</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group %></td>
            <% @roles.each do |role| %>
              <td>
                <% if @user and @user.is_maintainer?(@project, @package) %>
                  <% if defined? @package %>
                    <%= check_box_tag("group_" + role + "_" + group, '', @package.group_has_role?(group, role) || @project.group_has_role?(group, role), :class => :trigger) %><%= role.capitalize %>
                  <% else %>
                    <%= check_box_tag("group_" + role + "_" + group, '', @project.group_has_role?(group, role), :class => :trigger) %><%= role.capitalize %>
                  <% end %>
                  <% #TODO: Add respective controller actions to support group addition / removal %>
                  <script type="text/javascript">$('#group_<%= role %>_<%= group %>').change(change_role);</script>
                <% else %>
                  <%= role.capitalize %>
                <% end %>
              </td>
            <% end %>
            <td>
              <% if @user and @user.is_maintainer?(@project, @package) %>
                <% #TODO: Add respective controller actions to support group addition / removal %>
                <%= link_to image_tag('icons/group_delete.png', :alt => "Remove", :title => "Remove group"), {:action => "remove_group", :project => @project, :package => @package, :groupid => user}, {:confirm => "Really remove '#{group}'?", :method => :post}%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <script type="text/javascript">
      $('#groups_table').tablesorter({ widgets: ['zebra'], sortList: [[0,1]], headers: {1: {sorter: false}, 2: {sorter: false}} });
    </script>
  <% end %>
  <% if @user and @user.is_maintainer?(@project, @package) %>
    <p>
      <%= link_to image_tag('icons/group_add.png', :alt => "Add group", :title => "Add group"), :action => :add_group, :package => @package, :project => @project %>
      <%= link_to 'Add group', :action => :add_group, :package => @package, :project => @project %>
    </p>
  <% end %>
</div>
