<%
@crumb_list = [
  'Search'
]
-%>

<h1><%= 'Advanced ' if params[:advanced] -%>Search</h1>
<p id="search_form">
  <% params[:advanced] ? partial='search_form_advanced' : partial='search_form' %>
  <%= render :partial => partial -%>
</p>
<br/>

<h1>Search results
  <% if @search_text %>for &quot;<%= @search_text -%>&quot;<% end %>
  <% if @results %>&nbsp;(<%= @results.length -%>)<% end %>
</h1>
<%= render :partial => 'search_result' %>

