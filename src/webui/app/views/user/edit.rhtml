<h2>Editing User Data for User <%=h @user.login %></h2>

<%= form_tag :action => :save %>
  <b>Real Name:</b><br/>
  <%= text_field_tag( "realname", @user.realname, :size => 80 ) %><br/>
  <% if session[:login] == 'Admin' %>
  <p>
  <b>Source Backend:</b><br/>
  <b>Host:</b><br/>
  <%= text_field_tag( "source_host", @user.source_backend.host, :size =>30 ) %><br/>
  <b>Port:</b><br/>
  <%= text_field_tag( "source_port", @user.source_backend.port, :size => 6 ) %><br/>
  </p>
  <p>
  <b>Rpm Backend:</b><br/>
  <b>Host:</b><br/>
  <%= text_field_tag( "rpm_host", @user.rpm_backend.host, :size =>30 ) %><br/>
  <b>Port:</b><br/>
  <%= text_field_tag( "rpm_port", @user.rpm_backend.port, :size => 6 ) %><br/>
  </p>
  <% end %>
  <p><%= submit_tag %></p>
<%= end_form_tag %>

<hr/>

<% if true or session[:login] == 'Admin' %>
<%= form_tag :action => :save %>
  <p><%= submit_tag "Switch to production backend" %></p>
  <%= hidden_field_tag( "realname", @user.realname ) %>
  <%= hidden_field_tag( "source_host", "buildservice.suse.de" ) %>
  <%= hidden_field_tag( "source_port", "5352" ) %>
  <%= hidden_field_tag( "rpm_host", "buildservice.suse.de" ) %>
  <%= hidden_field_tag( "rpm_port", "5252" ) %>
<%= end_form_tag %>

<%= form_tag :action => :save %>
  <p><%= submit_tag "Switch to test backend" %></p>
  <%= hidden_field_tag( "realname", @user.realname ) %>
  <%= hidden_field_tag( "source_host", "buildservice.suse.de" ) %>
  <%= hidden_field_tag( "source_port", "6362" ) %>
  <%= hidden_field_tag( "rpm_host", "buildservice.suse.de" ) %>
  <%= hidden_field_tag( "rpm_port", "6262" ) %>
<%= end_form_tag %>

<%= form_tag :action => :save %>
  <p><%= submit_tag "Switch to dummy backend" %></p>
  <%= hidden_field_tag( "realname", @user.realname ) %>
  <%= hidden_field_tag( "source_host", "localhost" ) %>
  <%= hidden_field_tag( "source_port", "3002" ) %>
  <%= hidden_field_tag( "rpm_host", "localhost" ) %>
  <%= hidden_field_tag( "rpm_port", "3002" ) %>
<%= end_form_tag %>

<%= form_tag :action => :save %>
  <p><%= submit_tag "Switch to default backend" %></p>
  <%= hidden_field_tag( "realname", @user.realname ) %>
  <%= hidden_field_tag( "source_host", "" ) %>
  <%= hidden_field_tag( "source_port", "" ) %>
  <%= hidden_field_tag( "rpm_host", "" ) %>
  <%= hidden_field_tag( "rpm_port", "" ) %>
<%= end_form_tag %>
<% end %>
