<% @pagetitle = "Edit Raw Config for #{@package}" %>
<%
@crumb_list = [
  link_to( 'Projects', :action => :list_public),
  link_to( @project, :action => :show, :project => @project),
  link_to( @package, :action => :show, :project => @project, :package => @package ),
  'Edit raw config'
]
-%>

<%= render :partial => "tabs" %>

<h2>Editing Raw Config for <%=h @package %></h2>

<% form_tag :action => :save_meta do %>
  <strong>Config:</strong><br/>
  <%= text_area_tag "meta", @meta, :rows => 20, :width => "95%" %><br/>
  <%= hidden_field_tag "project", @project.name %>
  <%= hidden_field_tag "package", @package.name %>
  <p><%= submit_tag %></p>
<% end %>

