<div id="dialog_wrapper">
  <div class="dialog" id="disable_mask"></div>
  <div class="dialog darkgrey_box">
    <div class="box box-shadow">
      <h2 class="box-header">Request Maintenance Incident</h2>
      <p>Submit to default maintenance project in order to create a new incident</p>
      <% form_tag({:controller => 'project', :action => 'new_incident_request'}, :method => :post) do %>
        <%= hidden_field_tag(:project, @project) %>
        <p>
          <%= label_tag(:sourceproject, "From project:") %><br/>
          <%= text_field_tag(:sourceproject, elide(@project.name, 40), :size => 40, :disabled => true) %><br/>
          <%= label_tag(:description, "Description:") %><br/>
          <%= text_area_tag(:description, "", :size => "40x3") %>
        </p>
        <div class="buttons">
          <%= submit_tag("Ok") %>
          <%= link_to_function("Cancel", 'remove_dialog()') %>
        </div>
      <% end %>
    </div>
  </div>
</div>

