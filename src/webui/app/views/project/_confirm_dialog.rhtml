<div id="dialog_wrapper">

<div class="dialog" id="disable_mask"></div>
<div class="dialog darkgrey_box">
  <div class="box box-shadow">
    <div class="box-header aligncenter">
      Confirmation
    </div>

    <p><%=@message%></p>

    <p><div class="aligncenter buttons">
      <%
      buttons.each do |but|
        case but[1]
        when :abort
        %><%= link_to_function but[0], 'remove_dialog()'%> <%
        else
        %><%= link_to_remote but[0], but[1]%><%
        end
      end
    %></div>
    </p>


  </div>

</div></div>
