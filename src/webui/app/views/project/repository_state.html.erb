<%
project_bread_crumb( 'Repository States' )
@pagetitle = "Repository States for #{@project.name}"
@metarobots = 'noindex'
-%>

<%= render :partial => "tabs" %>

<!-- this page will also get other repository informations like jobhistory -->

<% @repositories.each do |repository| %>
  <div style="margin-bottom: 1.2em" id="<%= valid_xml_id(repository) %>" >

    <h2>Repository state for <%= repository %></h2>

    <p><%= link_to image_tag( 'icons/drive_go.png' ), repo_url( @project, repository ) %> Go to download <%= link_to 'repository', repo_url( @project, repository ) %>
    </p>

    <div style="margin-top: 1em">
      <h4>Build Dependendency Cycles</h4>
      <% cycles = 0 
         archs = []
         archs = @repocycles[repository].keys.sort if @repocycles.has_key? repository
         archs.each do |arch| 
         cycles = 1 %>
        <h5>Cycles for <%= arch %> (#<%= @repocycles[repository][arch].length %>)</h5>
        <ul>
          <% @repocycles[repository][arch].each do |cycle| %>
            <li> <% cycle.each do |package| %>
                <%= link_to package, :project => @project, :package => package, :controller => :package, :action => :show %>
                <% if package == cycle.last %>
                  <!-- carriage return -->
                  &#8629;
                <% else %>
                  <!-- right arrow -->
                  &#8658;
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>
    <% unless cycles > 0 %>
      <p><i>There are no cycles in this repository.</i></p>
    <% end %>
  </div>
</div>
<% end %>
