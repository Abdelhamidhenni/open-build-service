<% @pagetitle = "New Package" %>
<% project_bread_crumb 'Add Package' -%>

<%= render :partial => "tabs" %>

<!--
<p>
<%= link_to('Create package using spec file wizard', :controller => 'package', :action => 'wizard_new', :project => @project) %>
