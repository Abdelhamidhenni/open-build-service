<% @pagetitle = "Maintenance Incidents of #{@project}"
   project_bread_crumb 'Incidents' -%>

<%= render :partial => "tabs" %>

<% content_for :content_for_head do %>
  <%= stylesheet_link_tag 'jquery.autocomplete' %>
<% end %>

<div style="display: inline">
  <p>
    <%= hidden_field_tag(:project, @project.name ) %>

    <% if @project.can_edit?( session[:login] ) %>
      <span style="float: left">
        <%= link_to ( image_tag( 'icons/package_add.png', :title => 'Create Incident' ),
          {:controller => :project, :action => :new_incident, :project => @project},
          {:confirm => "Really create new incident project?", :class => 'x', :method => :post}) %>
        <%= link_to ('Create New Maintenance Incident',
          {:controller => :project, :action => :new_incident, :project => @project},
          {:confirm => "Really create new incident project?", :class => 'x', :method => :post}) %>
      </span>
    <% end %>
  </p>
</div>


<h5>Running Incidents</h5>

<h5>Done Incidents</h5>
