<% @pagetitle = "Closed maintenance Incidents for #{@project}" %>
<% project_bread_crumb 'Maintainance Incidents' %>

<%= render :partial => 'tabs' %>

<h3><%= @pagetitle %></h3>

<%= link_to("Show running incidents", :action => :maintenance_incidents, :project => @project) %>

<div class="grid_8 alpha">
  <% if @closed_maintenance_incident_list.length == 0 %>
    <p><%= image_tag 'icons/accept.png' %> 0 closed incidents</p>
  <% else %>
    <ul>
      <% @closed_maintenance_incident_list.each do |incident| %>
        <li>
           <%= link_to("#{incident.name}", :action => :show, :project => incident.name) %>
           : <%= incident.title %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

