<div>
  <form action="/ICSLogin/auth-up" method="post" enctype="application/x-www-form-urlencoded" name="login" id="login_form">
    <% relative_root = '' %>
    <% relative_root = ActionController::Base.relative_url_root unless @return_to_path !=~ /^#{ActionController::Base.relative_url_root}/ %>
    <input name="url" size="20" value="<%= "#{@return_to_host}#{relative_root}#{@return_to_path}" %>" type="hidden" />
    <input name="context" value="default" type="hidden" />
    <input name="proxypath" value="reverse" type="hidden" />
    <input name="message" value="Please log In" type="hidden" />
    <input name="return_to_path" value="<%= relative_root + @return_to_path %>" type="hidden" />
    <table class="vertical">
      <tr>
        <td>Username</td>
        <td>
          <input name="username" size ='15' maxlength='50' />
        </td>
      </tr><tr>
        <td>Password</td>
        <td>
          <input name="password" type="password" size ='15' maxlength='50' />
        </td>
      </tr><tr>
        <td colspan="2" align="right">
          <%= submit_tag "Login" %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <%= link_to "Forgot your password?", "https://secure-www.novell.com/selfreg/jsp/forgotPassword.jsp" %> <br/>
          <%= link_to "Create an account", "https://secure-www.novell.com/selfreg/jsp/createOpenSuseAccount.jsp?target=http://features.opensuse.org" %>

        </td>
      </tr>
    </table>
  </form>
</div>
