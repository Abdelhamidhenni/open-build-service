<div data-role="collapsible" data-collapsed="true">
	 <h3>Users</h3>
 </div>


 <!-- Attributes -->
 <div data-role="collapsible" data-collapsed="true">
         <h3>Attributes</h3>
 </div>

 <!-- Raw Config -->
 <div data-role="collapsible" data-collapsed="true">
          <h3>Raw Config</h3>
</div>

<!-- Build status -->
<% if @project.has_element?(:repository) && !@buildresult.blank? %>
  <div data-role="collapsible" data-collapsed="true">
    <h3>Build Status
      <% #FIXME: broken, needs to check in @statushash %>
      <% if @buildresult.flatten.select{|state| ['failed', 'unresolvable', 'broken'].include? state }.empty? %>
        <%= image_tag 'icons/accept.png' %>
      <% else %>
        <%= image_tag 'icons/exclamation.png' %>
      <% end -%>
    </h3>
    <div id='buildstatus'>
      <%=  render :partial => 'buildstatus' %>
    </div>
  </div>
<% end -%>

